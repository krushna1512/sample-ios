default_platform(:ios)

platform :ios do
  desc "Build the app using gym"
  lane :build_only do
    # Use match to sync provisioning profiles and certificates if you use match
    match(type: "appstore", readonly: true)

    gym(
      project: "SampleApp.xcodeproj",  # Your Xcode project file
      scheme: "SampleApp",             # Your scheme name
      clean: true,
      export_method: "app-store",
      output_directory: "./build",
      output_name: "SampleApp.ipa"
    )
  end
end
